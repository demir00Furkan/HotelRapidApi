@model List<HotelRapidApi.Models.HotelViewModel.Hotel>
@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
	<meta charset="UTF-8">
	<title>LuxStay - Lüks Konaklama Deneyimi</title>
	<script src="https://cdn.tailwindcss.com"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="bg-gray-50">
	<header class="bg-white shadow-sm">
		<div class="container mx-auto px-4 py-6 flex justify-between items-center">
			<h1 class="text-2xl font-bold text-gray-800">LuxStay</h1>
		</div>
	</header>

	<section class="bg-blue-600 text-white py-16">
		<div class="container mx-auto px-4 text-center">
			<h2 class="text-4xl font-bold mb-4">Hayalinizdeki Tatil İçin Mükemmel Otel</h2>
		</div>
	</section>

	<form asp-controller="Hotel" asp-action="HotelList" method="post">
		<section class="container mx-auto px-4 -mt-10">
			<div class="bg-white rounded-xl shadow-lg p-6">
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
					<div>
						<label>Şehir</label>
						<select name="city" class="w-full p-3 border border-gray-300 rounded-lg" required>
							<option selected disabled>Şehir seçin</option>
							<option>istanbul</option>
							<option>ankara</option>
							<option>izmir</option>
							<option>antalya</option>
							<option>bodrum</option>
						</select>
					</div>
					<div>
						<label>Giriş Tarihi</label>
						<input type="date" name="dateIn" class="w-full p-3 border border-gray-300 rounded-lg" required value="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" />
					</div>
					<div>
						<label>Çıkış Tarihi</label>
						<input type="date" name="dateOut" class="w-full p-3 border border-gray-300 rounded-lg" required />
					</div>
					<div>
						<label>Yetişkin</label>
						<select name="guest" class="w-full p-3 border border-gray-300 rounded-lg" required>
							<option value="1">1 Yetişkin</option>
							<option value="2" selected>2 Yetişkin</option>
							<option value="3">3 Yetişkin</option>
							<option value="4">4 Yetişkin</option>
						</select>
					</div>
					<div>
						<label>Çocuk</label>
						<select name="children" class="w-full p-3 border border-gray-300 rounded-lg" required>
							<option value="0" selected>0 Çocuk</option>
							<option value="1">1 Çocuk</option>
							<option value="2">2 Çocuk</option>
							<option value="3">3 Çocuk</option>
							<option value="4">4 Çocuk</option>
						</select>
					</div>
					<div class="flex items-end">
						<button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-3 px-4 rounded-lg">
							Otel Ara
						</button>
					</div>
				</div>
			</div>
		</section>
	</form>

	<section class="container mx-auto px-4 py-12">
		<h3 class="text-2xl font-bold text-gray-800 mb-8">Sonuçlar</h3>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			@foreach (var item in Model)
			{
				<div class="bg-white rounded-xl shadow-md overflow-hidden hotel-card transition duration-300 cursor-pointer">
					<div class="relative">
						@if (item.property.photoUrls != null && item.property.photoUrls.Length > 0)
						{
							<img src="@item.property.photoUrls[0]" alt="@item.property.name" class="w-full h-48 object-cover">
						}
						else
						{
							<div class="w-full h-48 bg-gray-200 flex items-center justify-center">
								<i class="fas fa-hotel text-gray-400 text-4xl"></i>
							</div>
						}
						<div class="absolute top-4 right-4 bg-white px-2 py-1 rounded-full flex items-center">
							<i class="fas fa-star rating-stars mr-1 text-yellow-400"></i>
							<span class="font-medium">@item.property.reviewScore</span>
						</div>
					</div>
					<div class="p-6">
						<h4 class="text-xl font-bold mb-2">@item.property.name</h4>
						<p class="text-gray-600 mb-4 flex items-center">
							<i class="fas fa-map-marker-alt mr-2 text-blue-500"></i> @item.property.wishlistName
						</p>
						<div class="flex justify-between items-center">
							<div>
								<p class="text-sm text-gray-500">Gece başına</p>
								<p class="text-xl font-bold text-blue-500">
									@if (item.property.priceBreakdown?.grossPrice != null)
									{
										@item.property.priceBreakdown.grossPrice.value.ToString("N0") @item.property.priceBreakdown.grossPrice.currency
									}
									else
									{
										<span>Fiyat bilgisi yok</span>
									}
								</p>
							</div>
							<a asp-controller="Hotel" asp-action="HotelDetail" asp-route-id="@item.hotel_id" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition">
								Detaylar
							</a>
						</div>
					</div>
				</div>
			}
		</div>
	</section>
</body>
</html>
