@model HotelRapidApi.Models.HotelPageViewModel
@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@Model.HotelDetail.hotel_name</title>
	<script src="https://cdn.tailwindcss.com"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
	<style>
		.gradient-bg {
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		}

		.glass-effect {
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.2);
		}

		.amenity-icon {
		transition: all 0.3s ease;
		}

		.amenity-icon:hover {
		transform: scale(1.2);
		}

		.rating-stars {
		color: #fbbf24;
		}

		.gallery-image {
		transition: all 0.3s ease;
		cursor: pointer;
		}

		.gallery-image:hover {
		transform: scale(1.03);
		}

		.room-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
		}

		.review-card {
		transition: all 0.3s ease;
		}

		.review-card:hover {
		transform: translateY(-2px);
		box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
		}
	</style>
</head>
<body class="bg-gray-50 font-sans">
	<!-- Navigation -->
	<nav class="bg-white shadow-lg sticky top-0 z-50">
		<div class="container mx-auto px-4 py-4 flex justify-between items-center">
			<div class="text-2xl font-bold gradient-bg bg-clip-text text-transparent">
				<i class="fas fa-hotel mr-2"></i>LuxStay
			</div>
			<div class="hidden md:flex space-x-8">
				<a href="#" class="text-indigo-700 font-medium border-b-2 border-indigo-700 pb-1">Ana Sayfa</a>
				<a href="#" class="text-gray-600 hover:text-indigo-700 transition duration-300">Oteller</a>
				<a href="#" class="text-gray-600 hover:text-indigo-700 transition duration-300">Yerler</a>
				<a href="#" class="text-gray-600 hover:text-indigo-700 transition duration-300">Fırsatlar</a>
				<a href="#" class="text-gray-600 hover:text-indigo-700 transition duration-300">İletişim</a>
			</div>
			<div class="flex items-center space-x-4">
				<button class="px-4 py-2 text-indigo-700 hover:bg-indigo-50 rounded-lg transition duration-300">
					<i class="fas fa-user"></i>
				</button>
				<button class="md:hidden text-gray-600">
					<i class="fas fa-bars"></i>
				</button>
			</div>
		</div>
	</nav>

	<!-- Hotel Detail Page -->
	<div class="container mx-auto px-4 py-8">
		<!-- Back Button -->
		<button onclick="window.location.href='HotelList.cshtml'" class="mb-6 flex items-center text-indigo-600 hover:text-indigo-800 transition duration-300">
			<i class="fas fa-arrow-left mr-2"></i> Geri Dön  
		</button>

		<!-- Hotel Header -->
		<div class="bg-white rounded-2xl shadow-lg overflow-hidden mb-8">
			<div class="relative">
				<img src="@Model.HotelPhotos[0].url"
				alt="Grand Marina Resort" class="w-full h-96 object-cover">
				<div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
				<div class="absolute bottom-0 left-0 right-0 p-8">
					<div class="flex justify-between items-end">
						<div>
							<h1 class="text-4xl font-bold text-white mb-2">@Model.HotelDetail.hotel_name</h1>
							<div class="flex items-center mb-2">
								<div class="rating-stars">
									<i class="fas fa-star"></i>
								</div>
								<span class="ml-2 text-white">@Model.HotelDetail.rawData.reviewScore (@Model.HotelDetail.rawData.reviewCount Görüntülenme)</span>
								<span class="ml-4 text-white flex items-center">
									<i class="fas fa-map-marker-alt mr-1"></i> @Model.HotelDetail.address
								</span>
							</div>
							<div class="flex items-center text-white/90">
								<i class="fas fa-tag mr-2"></i>
								<span>Fırsat İndirim</span>
							</div>
						</div>
						<div class="glass-effect rounded-2xl p-6 text-center">
							<div class="text-3xl font-bold text-white"> @Model.HotelDetail.product_price_breakdown.gross_amount.amount_rounded</div>
							<div class="text-white/80 line-through">@((int)(Model.HotelDetail.product_price_breakdown.gross_amount.value / 0.85))</div>
							<div class="text-white/90 text-sm">Gecelik</div>
							<button class="mt-3 w-full bg-white text-indigo-700 py-2 rounded-lg font-semibold hover:bg-gray-100 transition duration-300">
								Şimdi Rezervasyon Yapın
							</button>
						</div>
					</div>
				</div>
				<div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm px-4 py-2 rounded-full shadow-lg">
					<i class="fas fa-heart text-red-500 mr-1"></i>
					<span class="text-gray-700 font-medium">Favori</span>
				</div>
			</div>
		</div>

		<!-- Main Content -->
		<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
			<!-- Left Column -->
			<div class="lg:col-span-2 space-y-8">

				<!-- Description -->
				<div class="bg-white rounded-2xl shadow-lg p-6">
					<h2 class="text-2xl font-bold text-gray-800 mb-6">Otel Hakkında </h2>
					<div class="prose max-w-none text-gray-700 space-y-4">
						


						@{
							int count3 = Model.HotelDetail.hotel_important_information_with_codes.Count();
						}
						@for (int i = 0; i < count3-1; i++)
						{
							<p>
								@Model.HotelDetail.hotel_important_information_with_codes[i].phrase;
							</p>
							<br />

						}



					</div>
				</div>

				<!-- Amenities -->
				<div class="bg-white rounded-2xl shadow-lg p-6">
					<h2 class="text-2xl font-bold text-gray-800 mb-6">Amenities & Services</h2>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
						@{
							int count2;
							count2 = Model.HotelDetail.facilities_block.facilities.Count();

						}
						<div class="space-y-4">
							@for (int i = 0; i < count2; i++)
							{
								<div class="space-y-3">
									<div class="flex items-center">
										<div class="amenity-icon bg-indigo-100 p-3 rounded-full mr-3">
											<i class="fas gradient-bg text-indigo-600"></i>
										</div>
										<span class="text-gray-700">@Model.HotelDetail.facilities_block.facilities[i].name </span>
									</div>
								</div>
							}
						</div>

					</div>
				</div>
				<!-- Gallery -->
				<div class="bg-white rounded-2xl shadow-lg p-6">
					<h2 class="text-2xl font-bold text-gray-800 mb-6">Fotoğraf Galerisi</h2>
					<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
						@{
							int count;
							count = Model.HotelPhotos.Count();

						}
						@for (int i = 0; i < count; i++)
						{
							<div class="col-span-2 row-span-2">
								<img src="@Model.HotelPhotos[i].url"
								alt="Hotel" class="w-full h-full object-cover rounded-xl gallery-image">
							</div>
						}
					</div>
				</div>
			</div>

			<!-- Right Column - Booking Card -->
			<div class="lg:col-span-1">
				<div class="bg-white rounded-2xl shadow-lg p-6 sticky top-24">
					<h3 class="text-xl font-bold text-gray-800 mb-6">Konaklamanızı Ayarlayın </h3>

					<div class="space-y-4">
						<div>
							<label class="block text-gray-700 font-medium mb-2">Varış Tarihi</label>
							<label>@Model.HotelDetail.arrival_date</label>
						</div>

						<div>
							<label class="block text-gray-700 font-medium mb-2">Çıkış Tarihi</label>
							<label>@Model.HotelDetail.departure_date</label>
						</div>

						<div>
							<label class="block text-gray-700 font-medium mb-2">Yetişkin Sayısı</label>
							<label>@ViewBag.adult Yetişkin</label>
						</div>


						<div>
							<label class="block text-gray-700 font-medium mb-2">Çocuk Sayısı</label>
							<label class="block text-gray-700 font-medium mb-2">@ViewBag.child Çocuk</label>

						</div>
					</div>

					<div class="border-t border-gray-200 mt-6 pt-6">
						<div class="flex justify-between items-center mb-2">
							@{
								var arrival = DateTime.Parse(Model.HotelDetail.arrival_date);
								var departure = DateTime.Parse(Model.HotelDetail.departure_date);
								var geceSayısı = (departure - arrival).Days;
							}
							<span class="text-gray-600">Oda Fiyatı (@geceSayısı Gece)</span>
							@{
								float odaFiyatı;
								odaFiyatı = Model.HotelDetail.product_price_breakdown.gross_amount.value;

							}
							<span class="text-gray-800">@Model.HotelDetail.product_price_breakdown.gross_amount.amount_rounded</span>
						</div>
						<div class="flex justify-between items-center mb-2">
							<span class="text-gray-600">Vergiler Ve Diğer Ücretler</span>
							<span class="text-gray-800">@Model.HotelDetail.product_price_breakdown.excluded_amount.amount_rounded</span>
						</div>
						<div class="flex justify-between items-center mb-4">
							<span class="text-gray-600">İndirim</span>
							@{
								float indirim;
								indirim = @Model.HotelDetail.is_genius_deal + @Model.HotelDetail.block[0].is_flash_deal + @Model.HotelDetail.block[0].is_smart_deal;
							}
							<span class="text-green-600">-@indirim</span>
						</div>
						<div class="flex justify-between items-center text-lg font-bold">
							<span>Toplam</span>
							<span class="text-indigo-700">@Model.HotelDetail.product_price_breakdown.gross_amount.amount_rounded</span>
						</div>
					</div>

					<button class="w-full bg-indigo-600 text-white py-4 rounded-lg font-semibold hover:bg-indigo-700 transition duration-300 mt-6">
						Şimdi Rezervasyon Yapın
					</button>

					<div class="text-center mt-4">
						<p class="text-sm text-gray-600">Girişten 24 saat öncesine kadar ücretsiz iptal</p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Footer -->
	<footer class="bg-gray-900 text-white py-12">
		<div class="container mx-auto px-4">
			<div class="grid grid-cols-1 md:grid-cols-4 gap-8">
				<div>
					<h3 class="text-xl font-bold mb-4">LuxStay</h3>
					<p class="text-gray-400">Dünya çapında lüks konaklama için güvenilir ortağınız.</p>
				</div>
				<div>
					<h4 class="font-semibold mb-4">Hızlı Bağlantılar</h4>
					<ul class="space-y-2 text-gray-400">
						<li><a href="#" class="hover:text-white transition duration-300">Hakkımızda</a></li>
						<li><a href="#" class="hover:text-white transition duration-300">İletişim</a></li>
						<li><a href="#" class="hover:text-white transition duration-300">Destek</a></li>
					</ul>
				</div>
				<div>
					<h4 class="font-semibold mb-4">Destek</h4>
					<ul class="space-y-2 text-gray-400">
						<li><a href="#" class="hover:text-white transition duration-300">Yardım Merkezi</a></li>
						<li><a href="#" class="hover:text-white transition duration-300">Hizmet Ve Şartlar  </a></li>
						<li><a href="#" class="hover:text-white transition duration-300">Gizlilik Politikası </a></li>
					</ul>
				</div>
				<div>
					<h4 class="font-semibold mb-4">Bizi Takip Edin</h4>
					<div class="flex space-x-4">
						<a href="#" class="text-gray-400 hover:text-white transition duration-300">
							<i class="fab fa-facebook text-xl"></i>
						</a>
						<a href="#" class="text-gray-400 hover:text-white transition duration-300">
							<i class="fab fa-twitter text-xl"></i>
						</a>
						<a href="#" class="text-gray-400 hover:text-white transition duration-300">
							<i class="fab fa-instagram text-xl"></i>
						</a>
					</div>
				</div>
			</div>
			<div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
				<p>© 2025 LuxStay. Tüm hakları saklıdır.</p>
			</div>
		</div>
	</footer>

	<script>
		document.addEventListener('DOMContentLoaded', function() {
			// Heart icon toggle
			const heartIcon = document.querySelector('.fa-heart');
			heartIcon.addEventListener('click', function() {
				this.classList.toggle('text-red-500');
				this.classList.toggle('text-gray-400');
			});

			// Gallery image click handler
			const galleryImages = document.querySelectorAll('.gallery-image');
			galleryImages.forEach(image => {
				image.addEventListener('click', function() {
					// Could implement lightbox functionality here
					console.log('Image clicked:', this.alt);
				});
			});
		});
	</script>
</body>
</html>
