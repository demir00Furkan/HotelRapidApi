@model HotelRapidApi.Models.HotelPageViewModel
@{
    Layout = null;
    var hotel = Model.HotelDetail;
    var photos = Model.HotelPhotos ?? new List<HotelRapidApi.Models.HotelPhotoViewModel.Datum>();
    var roomRec = hotel?.room_recommendation != null && hotel.room_recommendation.Length > 0 ? hotel.room_recommendation[0] : null;
    var infoCodes = hotel?.hotel_important_information_with_codes ?? new HotelRapidApi.Models.HotelDetailViewModel.Hotel_Important_Information_With_Codes[0];
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(hotel?.hotel_name ?? "Otel Detayları") - LuxStay</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .gallery-image {
            transition: all 0.3s ease;
        }

            .gallery-image:hover {
                transform: scale(1.03);
            }

        .amenity-icon {
            width: 24px;
            height: 24px;
            margin-right: 8px;
            color: #3B82F6;
        }
    </style>
</head>
<body class="bg-gray-50">
    <header class="bg-white shadow-sm">
        <div class="container mx-auto px-4 py-6 flex justify-between items-center">
            <div class="flex items-center">
                <i class="fas fa-hotel text-blue-500 text-3xl mr-2"></i>
                <h1 class="text-2xl font-bold text-gray-800">LuxStay</h1>
            </div>
        </div>
    </header>

    <section class="container mx-auto px-4 py-12">
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
            <!-- Hotel Gallery -->
            <div class="grid grid-cols-1 lg:grid-cols-4 gap-1">
                @if (photos.Count > 0)
                {
                    <div class="lg:col-span-2 row-span-2">
                        <img src="@photos[0].url" alt="Otel Görseli" class="w-full h-full object-cover gallery-image">
                    </div>
                }
                @for (int i = 1; i < Math.Min(5, photos.Count); i++)
                {
                    <div class="lg:col-span-1">
                        <img src="@photos[i].url" alt="Otel Görseli" class="w-full h-full object-cover gallery-image">
                    </div>
                }
            </div>

            <!-- Hotel Info -->
            <div class="p-8">
                <div class="flex flex-col md:flex-row justify-between items-start mb-6">
                    <div>
                        <h2 class="text-3xl font-bold mb-2">@hotel?.hotel_name</h2>
                        <div class="flex items-center text-gray-600 mb-4">
                            <i class="fas fa-map-marker-alt mr-2 text-blue-500"></i>
                            <span>@hotel?.address</span>
                            @if (!string.IsNullOrEmpty(hotel?.city_name_en))
                            {
                                <span class="mx-2">•</span>
                                <span>@hotel.city_name_en</span>
                            }
                            @if (hotel?.rawData?.reviewScore > 0)
                            {
                                <span class="mx-2">•</span>
                                <div class="flex items-center">
                                    <i class="fas fa-star rating-stars mr-1 text-yellow-400"></i>
                                    <span class="font-medium">@hotel.rawData.reviewScore "@hotel.rawData.reviewScoreWord"</span>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="text-right">
                        <p class="text-sm text-gray-500">Herşey Dahil Gece başına</p>
                        <p class="text-3xl font-bold text-blue-500">
                            @(hotel?.product_price_breakdown?.gross_amount_per_night?.amount_rounded ?? "-")
                            @(hotel?.product_price_breakdown?.gross_amount_per_night?.currency)
                        </p>
                        <br /><br /><br />
                        <p class="text-sm text-gray-500">
                            @(roomRec?.adults ?? 1) Yetişkin,
                            @(roomRec?.children ?? 0) Çocuk,
                            @(hotel?.product_price_breakdown?.nr_stays ?? 1) Gece
                            <br />
                            Toplam: @(hotel?.product_price_breakdown?.net_amount?.amount_rounded ?? "-")
                        </p>
                        <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-3 px-4 rounded-lg">
                            Rezervasyonu Gerçekleştir
                        </button>
                    </div>
                </div>

                <!-- Hotel Description -->
                <div class="mb-8">
                    <h3 class="text-xl font-semibold mb-4">Otel Hakkında</h3>
                    <p class="text-gray-700 leading-relaxed">
                        @Model.HotelDetail.hotel_important_information_with_codes[0].phrase <br /> @Model.HotelDetail.hotel_important_information_with_codes[1].phrase <br />@Model.HotelDetail.hotel_important_information_with_codes[2].phrase
                    </p>
                </div>

                <!-- Google Maps -->
                @if (hotel?.rawData?.latitude != 0 && hotel?.rawData?.longitude != 0)
                {
                    <div style="width: 100%">
                        <iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                                src="https://maps.google.com/maps?q=@hotel.rawData.latitude,@hotel.rawData.longitude&amp;z=15&amp;output=embed">
                        </iframe>
                    </div>
                }

                <!-- Amenities -->
                @if (hotel?.facilities_block?.facilities != null && hotel.facilities_block.facilities.Length > 0)
                {
                    <div class="mt-8">
                        <h3 class="text-xl font-semibold mb-4">Olanaklar</h3>
                        <div class="flex flex-wrap gap-4">
                            @foreach (var facility in hotel.facilities_block.facilities)
                            {
                                <div class="flex items-center bg-blue-50 px-3 py-2 rounded-lg shadow-sm">
                                    <i class="fas fa-check amenity-icon"></i>
                                    <span>@facility.name</span>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</body>
</html>